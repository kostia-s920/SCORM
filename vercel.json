{
  "version": 2,
  "builds": [
    { "src": "api/convert/index.py", "use": "@vercel/python" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/convert", "dest": "/api/convert/index.py", "methods": ["POST", "OPTIONS"] },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}